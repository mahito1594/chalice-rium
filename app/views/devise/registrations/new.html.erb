<% provide(:title, t("label.user.signup")) %>
<div class="w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
  <div class="px-6 py-4">
    <%# Title %>
    <h3 class="mt-3 text-xl font-medium text-center text-gray-600 dark:text-gray-200">
      <%= t("label.user.signup") %>
    </h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/error_messages", resource: resource %>

      <%# Username %>
      <div class="w-full mt-4">
        <%= f.label :username, class: "block text-sm text-gray-800 dark:text-gray-200" %>
        <%= f.text_field(:username, autofocus: true,
                         class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40",
                         placeholder: "@willem", pattern: "@[a-zA-Z0-9_]+", required: true) %>
      </div>

      <%# Display name %>
      <div class="mt-4">
        <%= f.label :display_name, class: "block text-sm text-gray-800 dark:text-gray-200" %>
        <%= f.text_field(:display_name, autofocus: true,
                         class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40",
                         placeholder: "Master Willem", required: true) %>
      </div>

      <%# Email address %>
      <div class="mt-4">
        <%= f.label :email, class: "block text-sm text-gray-800 dark:text-gray-200" %>
        <%= f.email_field(:email, autofocus: true,
                          class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40",
                          placeholder: "master.willem@byrgenwerth.college", required: true,
                          autocomplete: "email") %>
      </div>

      <%# Password %>
      <div class="mt-4">
        <%= f.label :password, class: "block text-sm text-gray-800 dark:text-gray-200" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-600 dark:text-gray-400">※<%= @minimum_password_length %>文字以上</p>
        <% end %>
        <%= f.password_field(:password, autofocus: true,
                             class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40",
                             minlength: @minimum_password_length, autocomplete: "new-password") %>
      </div>

      <%# Password comfirmation %>
      <div class="mt-4">
        <%= f.label :password_confirmation, class: "block text-sm text-gray-800 dark:text-gray-200" %>
        <%= f.password_field(:password_confirmation, autofocus: true,
                             class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40",
                             minlength: @minimum_password_length ,autocomplete: "new-password") %>
      </div>

      <%# Submit button %>
      <div class="mt-6">
        <%= f.submit(t("label.general.register"),
                     class: "w-full px-6 py-2.5 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-gray-800 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50") %>
      </div>
    <% end %>
  </div>
</div>

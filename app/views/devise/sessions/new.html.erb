<% provide(:title, "Log in") %>
<div class="w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
  <div class="px-6 py-4">
    <%# Title %>
    <h3 class="mt-3 text-xl font-medium text-center text-gray-600 dark:text-gray-200">Log in</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if flash[:alert] %>
        <div id="error_explanation" class="flex w-full max-w-sm overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800" data-turbo-cache="false">
          <div class="flex items-center justify-center w-12 bg-red-500">
            <svg class="w-6 h-6 text-white fill-current" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
              <path d="M20 3.36667C10.8167 3.36667 3.3667 10.8167 3.3667 20C3.3667 29.1833 10.8167 36.6333 20 36.6333C29.1834 36.6333 36.6334 29.1833 36.6334 20C36.6334 10.8167 29.1834 3.36667 20 3.36667ZM19.1334 33.3333V22.9H13.3334L21.6667 6.66667V17.1H27.25L19.1334 33.3333Z"/>
            </svg>
          </div>

          <div class="px-4 py-2 -mx-3">
            <div class="mx-3">
              <span class="font-semibold text-red-500 dark:text-red-400"><%= flash[:alert] %></span>
            </div>
          </div>
        </div>
      <% end %>

      <%# Username %>
      <div class="w-full mt-4">
        <%= f.label :username, class: "block text-sm text-gray-800 dark:text-gray-200" %>
        <%= f.text_field(:username, autofocus: true,
                         class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40",
                         placeholder: "@willem", pattern: "@[a-zA-Z0-9_]+", required: true) %>
      </div>

      <%# Password %>
      <div class="mt-4">
        <div class="flex items-center justify-between">
          <%= f.label :password, class: "block text-sm text-gray-800 dark:text-gray-200" %>
          <%= link_to "Forgot password?", "#", class: "text-xs text-gray-600 dark:text-gray-400 hover:underline" %>
        </div>
        <%= f.password_field(:password, autofocus: true,
                             class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40",
                             autocomplete: "current-password") %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-4">
          <%= f.check_box :remember_me, class: "size-4 border rounded bg-white dark:bg-gray-800 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" %>
          <%= f.label :remember_me, class: "text-sm text-gray-800 dark:text-gray-200" %>
        </div>
      <% end %>

      <%# Submit button %>
      <div class="mt-6">
        <%= f.submit("Log in",
                     class: "w-full px-6 py-2.5 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-gray-800 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50") %>
      </div>
    <% end %>
  </div>

  <%# Link to sign up page %>
  <div class="flex items-center justify-center py-4 text-center bg-gray-50 dark:bg-gray-700">
    <span class="text-sm text-gray-600 dark:text-gray-200">Don't have an account?</span>
    <%= link_to("Sign up", new_user_registration_path,
                class: "mx-2 text-sm font-bold text-blue-500 dark:text-blue-400 hover:underline") %>
  </div>
</div>
